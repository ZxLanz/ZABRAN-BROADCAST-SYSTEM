{
  "watch": [
    "*.js",
    "routes/**/*.js",
    "config/**/*.js",
    "models/**/*.js",
    "utils/**/*.js"
  ],
  "ignore": [
    "node_modules/**/*",
    "baileys_auth_info/**/*",
    "wa_auth_data/**/*",
    ".wwebjs_auth/**/*",
    ".wwebjs_cache/**/*",
    "session/**/*",
    "logs/**/*",
    "uploads/**/*",
    "temp/**/*",
    "*.log",
    "*.session.json",
    "*.data.json",
    "baileys-stats.json",
    "chats.json"
  ],
  "ext": "js,json",
  "delay": 2000,
  "verbose": true,
  "execMap": {
    "js": "node"
  }
}